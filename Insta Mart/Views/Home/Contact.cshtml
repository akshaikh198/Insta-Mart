 @{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/InstaMartMasterPage.cshtml";
}

 <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="~/Home/Index">Home</a>
                    <span class="breadcrumb-item active">Contact</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form bg-light p-30">
                    <div id="success"></div>
                    <form action="/Home/Contact" method="post">
                        <div class="control-group">
                            <input type="text" class="form-control" name="name" placeholder="Your Name" required />
                           
                        <br />
                            <input type="text" class="form-control" name="mobile"  placeholder="mobile Number" required />
                            
                        <br />
                        
                            <input type="email" class="form-control" name="email" placeholder="Your Email" required/>
                           <br />
                       
                        
                            <textarea class="form-control" rows="8" name="message" placeholder="Message Here..." required></textarea>
                             
                            Captcha : 
                            <span style="color:blue; font-size:25px"><strike id="cp1">R5dfG</strike></span>
                            <a  style="color:red; font-size:30px; cursor:pointer">
                                <span class="fa fa-refresh" onclick="demo()">Refresh</span><br />
                                <input type="hidden" name="hd1" id="hd1" />
                                <input type="text" id="cp1" placeholder="Enter Captcha  "  name="cp1" class="form-control" required />
                            </a>
                            <script>
                                function getcaptcha()
                                {
                                    var str = "123456789ABDULKAYYUMSHAIKHaamnasiddiqui";
                                    var code = "";
                                    for (var i = 0; i < 5; i++)
                                    {
                                        code=code+str[Math.floor(Math.random()*20)]
                                    }
                                    return code;
                                }
                                function demo()
                                {
                                    var c = getcaptcha();
                                    document.getElementById("cp1").innerHTML = c;
                                    document.getElementById("hd1").value = c;
                                }
                            </script>

                       </div>
                        <div>
                            <br />
                            <button class="btn btn-info py-2 px-4" type="submit">Send
                                Message</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 mb-5">
                <div class="bg-light p-30 mb-30">
                    <iframe style="width: 100%; height: 250px;"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                    frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
                <div class="bg-light p-30 mb-3">
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-info mr-3"></i>123 Street, New York, USA</p>
                    <p class="mb-2"><i class="fa fa-envelope text-info mr-3"></i>info@example.com</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-info mr-3"></i>+012 345 67890</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->

